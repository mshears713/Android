<?xml version="1.0" encoding="utf-8"?>
<!--
    AndroidManifest.xml for Frontier Command Center

    Declares application components, permissions, and metadata.
    Key features configured:
    - GPS/Location permissions for Camp 3
    - Main activity as launcher
    - Theme configuration
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- GPS and Location permissions for Camp 3 - GPS Integration -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Internet permission for network simulation (though we use placeholders) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Notification permission for Camp 9 - System Integration (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PioneerCamps"
        tools:targetApi="31">

        <!-- Main entry point - ComponentActivity with Jetpack Compose -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.PioneerCamps">
            <!-- Main launcher intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Deep link support for camp navigation -->
            <!-- Example: frontiercommand://camp/1 opens Camp 1 directly -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Custom scheme for app-specific deep links -->
                <data
                    android:scheme="frontiercommand"
                    android:host="camp"
                    android:pathPrefix="/" />
            </intent-filter>

            <!-- HTTP/HTTPS deep link support -->
            <!-- Example: https://frontiercommand.app/camp/1 -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="frontiercommand.app"
                    android:pathPrefix="/camp" />
            </intent-filter>

            <!-- Deep link for settings -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="frontiercommand"
                    android:host="settings" />
            </intent-filter>

            <!-- Deep link for help -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="frontiercommand"
                    android:host="help" />
            </intent-filter>
        </activity>
    </application>

</manifest>
